<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_rv_item_article_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_rv_item_article_noti"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_brownish_grey_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_rv_item_article_noti_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/nanum_barungothic_light"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_rv_item_article_noti"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="'린 브랜딩을 시작할 때 참고하면 좋은 모음' 에 새로운 아티클이 추가되었습니다.'" />

    <TextView
        android:id="@+id/txt_rv_item_article_noti_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/nanum_barungothic_light"
        android:textColor="@color/brown_grey"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_item_article_noti_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_article_noti_title"
        tools:text="1분 전" />
</androidx.constraintlayout.widget.ConstraintLayout>