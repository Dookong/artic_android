<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#d1d1d1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_archive_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UX 디자인"
            android:fontFamily="@font/nanum_barungothic_regular"
            android:includeFontPadding="false"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:background="#d1d1d1"
        android:layout_width="match_parent"
        android:layout_height="0.6dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_archive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <include
        android:id="@+id/empty_view_act_archive"
        android:visibility="visible"
        layout="@layout/search_result_empty" />

</LinearLayout>