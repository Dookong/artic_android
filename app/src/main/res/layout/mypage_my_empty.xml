<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent" 
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/mypage_myarchive_create_btn"
        android:layout_width="149dp"
        android:layout_height="149dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/very_light_pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_mypage_plus_big" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanum_barungothic_regular"
        android:includeFontPadding="false"
        android:text="내 아카이브 만들기"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_myarchive_create_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>