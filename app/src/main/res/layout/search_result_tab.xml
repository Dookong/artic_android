<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >

    <RelativeLayout
        android:id="@+id/search_result_archive_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_search_result_tab_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown_grey"
            android:text="아카이브"
            android:textSize="14sp"
            android:fontFamily="@font/nanum_barungothic_regular"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/img_search_result_tab_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_search_result_tab_archive"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@id/tv_search_result_tab_archive"
            android:src="@drawable/dot" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/search_result_link_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_search_result_tab_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown_grey"
            android:text="아티클"
            android:textSize="14sp"
            android:fontFamily="@font/nanum_barungothic_regular"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/img_search_result_tab_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            android:layout_toRightOf="@id/tv_search_result_tab_article"
            android:layout_alignTop="@id/tv_search_result_tab_article"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-5dp"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>